<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/buzzer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
          android:paddingStart="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Session"/>
          <TextView
              android:id="@+id/buzzer_season"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:text="1"/>
      </LinearLayout>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="TEAM NAME"
          android:id="@+id/buzzer_team_name"/>
      <LinearLayout
          android:paddingEnd="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:orientation="vertical">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_alignParentEnd="true"
          android:text="Question"/>
          <TextView
              android:id="@+id/buzzer_question"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_gravity="center"
              android:text="1"/>
      </LinearLayout>
  </RelativeLayout>
    <TextView
        android:id="@+id/buzzer_ring_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/buzzer_status_text"
        android:textSize="15dp"
        android:visibility="gone"
        android:text="READY!"/>
    <TextView
        android:id="@+id/buzzer_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:text="WELCOME !"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:id="@+id/buzzer_reset"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        fancy:fb_borderColor="#272732"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#9c9c9c"
        fancy:fb_focusColor="#b6b6b6"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="RESET"
        fancy:fb_textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buzzer_status_text"
        android:visibility="gone"/>
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/buzzer_status_text"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:SpinKit_Color="#8C9B45"
        android:visibility="gone"
        />

</RelativeLayout>